@{
  Layout = "_Layout";
}

@using BonBonEtc.Models;

<h1>Flavors</h1>

@if (@Model.Count == 0)
{
  <h3>No flavors have been added yet.</h3>
} 

@foreach (Flavor flav in Model)
{
  <li>@Html.ActionLink($"{flav.Name}", "Details", new { id = flav.FlavorId })</li>
}

<p>@Html.ActionLink("Add a new flavor", "Create")</p>